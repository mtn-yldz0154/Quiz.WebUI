<style>
    .added-questions {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f1f1f1;
    }

    .question-item {
        margin-bottom: 15px;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .quiz-form {
        max-width: 1000px;
        margin: 0 auto;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .quiz-form .form-group {
            margin-bottom: 15px;
        }

        .quiz-form label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
        }

        .quiz-form .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

            .quiz-form .form-control:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .quiz-form .btn-submit {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .quiz-form .btn-submit:hover {
                background-color: #0056b3;
            }


    .success-animation {
        display: none; /* Başlangıçta gizli */
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 9999;
        text-align: center;
    }

    .success-box {
        background-color: #fff; /* Beyaz arka plan */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        opacity: 0;
        transform: scale(0.8);
        transition: opacity 0.5s ease, transform 0.5s ease;
    }

    .checkmark-circle {
        width: 100px;
        height: 100px;
        position: relative;
        margin: 0 auto;
    }

        .checkmark-circle .background {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: #4caf50; /* Yeşil arka plan */
            opacity: 0;
            transform: scale(0.8);
            transition: opacity 0.5s ease 0.2s, transform 0.5s ease 0.2s;
        }

    .checkmark {
        width: 35px;
        height: 70px;
        border-width: 5px;
        border-style: solid;
        border-color: #fff;
        border-top: none;
        border-right: none;
        position: absolute;
        top: 30px;
        left: 25px;
        transform: rotate(-45deg);
        opacity: 0;
        transform-origin: center;
        transition: opacity 0.3s ease 0.4s, transform 0.3s ease 0.4s;
    }

    .success-message {
        color: #4caf50;
        font-size: 18px;
        margin-top: 10px;
        opacity: 0;
        transition: opacity 0.5s ease 0.6s;
    }

    .show .success-box {
        opacity: 1;
        transform: scale(1);
    }

    .show .checkmark-circle .background {
        opacity: 1;
        transform: scale(1);
    }

    .show .checkmark {
        opacity: 1;
        transform: rotate(0deg);
    }

    .show .success-message {
        opacity: 1;
    }


</style>


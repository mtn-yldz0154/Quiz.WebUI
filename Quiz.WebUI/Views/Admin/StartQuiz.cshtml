@{
    ViewData["Title"] = "StartQuiz";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
<link rel="stylesheet" href="~/css/style.css">

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Oturum Başlat</h5>
                @if (ViewBag.Oturum == 0)
                {
                    <!-- Vertical Form -->
                    <form class="row g-3" asp-action="ManageQuiz" asp-controller="Admin" method="post">
                        <div class="col-12">
                            <label for="minute" class="form-label">Süreyi giriniz</label>
                            <input type="number" name="minute" class="form-control" value="0">
                        </div>

                        <div class="col-12">
                            <label for="minute" class="form-label">1. Mola Süresini giriniz</label>
                            <input type="number" name="Mola1" class="form-control" value="0">
                        </div>
                        <div class="col-12">
                            <label for="minute" class="form-label">2. Mola Süresini giriniz</label>
                            <input type="number" name="Mola2" class="form-control" value="0">
                        </div>
                        <div class="text-center">
                            @*  <a href="/admin/ManageQuiz" id="startQuiz" class="btn btn-success btn-lg" onclick="setQuizTime()">Quiz Başlat</a> *@
                            <input type="submit" class="btn btn-primary" value="Oturumu Başlat" />
                        </div>
                    </form>

                    <!-- Vertical Form -->
                }
                else
                {

                    <div class="alert alert-warning text-center" role="alert">
                        Devam eden bir oturum var!
                    </div>
                }
            </div>
        </div>
    </div>
</div>

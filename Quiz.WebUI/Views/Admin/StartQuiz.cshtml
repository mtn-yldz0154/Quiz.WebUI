
@{
    ViewData["Title"] = "StartQuiz";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
<link rel="stylesheet" href="~/css/style.css">

<div class="container d-flex justify-content-center align-items-center vh-100">
    @if (ViewBag.Oturum == 0)
    {
        <input type="number" id="minute" name="minute" placeholder="Süreyi giriniz" />

        <div class="text-center">
            <a href="/admin/ManageQuiz" id="startQuiz" class="btn btn-success btn-lg" onclick="setQuizTime()">Quiz Başlat</a>
        </div>
    }
    else if (ViewBag.Oturum == 1)
    {
        <div class="alert alert-warning text-center" role="alert">
            Devam eden bir oturum var!
        </div>
    }
</div>

<script>
    function setQuizTime() {
        // Get the value from the input field
        var minuteValue = document.getElementById("minute").value;

        // Get the link element
        var quizLink = document.getElementById("startQuiz");

        // If the input is not empty, append the minute as a query parameter
        if (minuteValue) {
            quizLink.href = "/admin/ManageQuiz?minute=" + minuteValue;
        }
    }
</script>